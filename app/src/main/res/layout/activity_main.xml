<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_bg"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#111827"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X turn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111827"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/cell_background"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOARD (fills remaining space) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/gridBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:rowCount="3"
            android:columnCount="3">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/cell_background"/>

        </GridLayout>

    </androidx.cardview.widget.CardView>


    <!-- GAME OVER OVERLAY (UI only) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlayGameOver"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#99000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardGameOver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvGameOverTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Over"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#111827"/>

                <TextView
                    android:id="@+id/tvGameOverMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="X wins!"
                    android:textSize="18sp"
                    android:textColor="#374151"/>

                <Button
                    android:id="@+id/btnPlayAgain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Play Again"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnCloseGameOver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Close"
                    android:backgroundTint="#E5E7EB"
                    android:textColor="#111827"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
