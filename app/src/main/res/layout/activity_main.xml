<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X turn"
        android:textSize="20sp"
        android:paddingBottom="12dp" />

    <GridLayout
        android:id="@+id/gridBoard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <Button android:id="@+id/btn0" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn1" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn2" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn3" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn4" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn5" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn6" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn7" style="@style/CellBtnStyle" />
        <Button android:id="@+id/btn8" style="@style/CellBtnStyle" />

    </GridLayout>

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:visibility="gone" />

</LinearLayout>
